{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
  <div>
    <h1 class="h3 mb-1">
      <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
        <line class="icon-stroke" x1="8" y1="6" x2="21" y2="6"></line>
        <line class="icon-stroke" x1="8" y1="12" x2="21" y2="12"></line>
        <line class="icon-stroke" x1="8" y1="18" x2="21" y2="18"></line>
        <circle class="icon-stroke" cx="4" cy="6" r="1"></circle>
        <circle class="icon-stroke" cx="4" cy="12" r="1"></circle>
        <circle class="icon-stroke" cx="4" cy="18" r="1"></circle>
      </svg>
      {{ title }}
    </h1>
    <p class="text-muted mb-0">Lista completa delle frasi.</p>
  </div>
  <div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" href="{{ path('app_admin_frasi_export') }}">
      <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
        <path class="icon-stroke" d="M12 3v12"></path>
        <polyline class="icon-stroke" points="7 10 12 15 17 10"></polyline>
        <path class="icon-stroke" d="M5 21h14"></path>
      </svg>
      Export JSON
    </a>
    <a class="btn btn-outline-secondary" href="{{ path('app_admin_frasi_import') }}">
      <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
        <path class="icon-stroke" d="M12 21V9"></path>
        <polyline class="icon-stroke" points="7 14 12 9 17 14"></polyline>
        <path class="icon-stroke" d="M5 3h14"></path>
      </svg>
      Import JSON
    </a>
    <form method="post" action="{{ path('app_admin_frasi_svuota') }}" class="m-0" onsubmit="return confirm('Svuotare tutte le frasi? Questa azione Ã¨ irreversibile.');">
      <input type="hidden" name="_token" value="{{ csrf_token('svuota_frasi') }}">
      <button class="btn btn-outline-danger" type="submit">
        <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
          <path class="icon-stroke" d="M3 6h18"></path>
          <path class="icon-stroke" d="M8 6V4h8v2"></path>
          <path class="icon-stroke" d="M6 6l1 14h10l1-14"></path>
        </svg>
        Svuota frasi
      </button>
    </form>
    <a class="btn btn-outline-secondary" href="{{ path('app_admin_home') }}">
      <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
        <line class="icon-stroke" x1="19" y1="12" x2="5" y2="12"></line>
        <polyline class="icon-stroke" points="12 19 5 12 12 5"></polyline>
      </svg>
      Admin
    </a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped align-middle admin-table">
    <thead>
      <tr>
        <th class="d-none d-md-table-cell">Contesto</th>
        <th class="d-none d-md-table-cell">Livello</th>
        <th class="d-none d-md-table-cell">Direzione</th>
        <th class="d-none d-md-table-cell">Frase</th>
        <th class="d-none d-md-table-cell">Traduzioni</th>
        <th class="text-end">Azioni</th>
      </tr>
    </thead>
    <tbody>
      {% for f in frasi %}
        <tr>
          <td class="d-none d-md-table-cell text-nowrap">{{ f.contesto.descrizione }}</td>
          <td class="d-none d-md-table-cell text-nowrap">{{ f.livello.descrizione }}</td>
          <td class="d-none d-md-table-cell text-nowrap">{{ f.direzione.descrizione }}</td>
          <td class="d-none d-md-table-cell">
            <div class="fw-semibold">{{ f.espressione.testo }}</div>
            {% if f.espressione.info %}
              <div class="text-muted small">{{ f.espressione.info }}</div>
            {% endif %}
          </td>
          <td class="d-none d-md-table-cell">
            {% set traduzioni = f.traduzioni ?? [] %}
            {% if traduzioni|length == 0 %}
              <span class="text-muted">-</span>
            {% else %}
              <div class="d-grid gap-1">
                {% for t in traduzioni %}
                  <div>{{ t.espressione.testo }}</div>
                {% endfor %}
              </div>
            {% endif %}
          </td>
          <td class="text-end">
            <div class="d-md-none text-start mb-2">
              <div><span class="text-muted small">Contesto:</span> {{ f.contesto.descrizione }}</div>
              <div><span class="text-muted small">Livello:</span> {{ f.livello.descrizione }}</div>
              <div><span class="text-muted small">Direzione:</span> {{ f.direzione.descrizione }}</div>
              <div class="mt-2">
                <div class="fw-semibold">{{ f.espressione.testo }}</div>
                {% if f.espressione.info %}
                  <div class="text-muted small">{{ f.espressione.info }}</div>
                {% endif %}
              </div>
              <div class="mt-2">
                <div class="text-muted small">Traduzioni:</div>
                {% set traduzioni = f.traduzioni ?? [] %}
                {% if traduzioni|length == 0 %}
                  <div class="text-muted">-</div>
                {% else %}
                  <div class="d-grid gap-1">
                    {% for t in traduzioni %}
                      <div>{{ t.espressione.testo }}</div>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="d-grid gap-1 d-sm-flex justify-content-end">
              <a class="btn btn-sm btn-outline-secondary w-100 w-sm-auto" href="{{ path('app_admin_frasi_modifica', {id: f.id}) }}">
                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                  <path class="icon-stroke" d="M4 20l4-1 10-10-3-3L5 16l-1 4z"></path>
                  <path class="icon-stroke" d="M14 6l3 3"></path>
                </svg>
                Modifica
              </a>
              <form method="post" action="{{ path('app_admin_frasi_elimina', {id: f.id}) }}" class="m-0 w-100 w-sm-auto" onsubmit="return confirm('Eliminare questa frase?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_frase_' ~ f.id) }}">
                <button class="btn btn-sm btn-outline-danger w-100 w-sm-auto" type="submit">Elimina</button>
              </form>
            </div>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="6">
            <div class="alert alert-warning mb-0">
              Nessuna frase trovata.
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<style>
@media (max-width: 767.98px) {
  .admin-table tbody tr > td {
    border-top: none;
  }
  .admin-table tbody tr {
    border-top: 1px solid var(--bs-table-border-color);
  }
}
</style>
{% endblock %}
