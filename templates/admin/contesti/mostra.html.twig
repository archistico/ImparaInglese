{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
  <div>
    <h1 class="h3 mb-1">
      <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
        <line class="icon-stroke" x1="8" y1="6" x2="21" y2="6"></line>
        <line class="icon-stroke" x1="8" y1="12" x2="21" y2="12"></line>
        <line class="icon-stroke" x1="8" y1="18" x2="21" y2="18"></line>
        <circle class="icon-stroke" cx="4" cy="6" r="1"></circle>
        <circle class="icon-stroke" cx="4" cy="12" r="1"></circle>
        <circle class="icon-stroke" cx="4" cy="18" r="1"></circle>
      </svg>
      {{ title }}
    </h1>
    <p class="text-muted mb-0">Contesto: {{ contesto.descrizione }}</p>
  </div>
  <a class="btn btn-outline-secondary" href="{{ path('app_admin_contesti') }}">
    <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
      <line class="icon-stroke" x1="19" y1="12" x2="5" y2="12"></line>
      <polyline class="icon-stroke" points="12 19 5 12 12 5"></polyline>
    </svg>
    Contesti
  </a>
</div>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Direzione</th>
        <th>Livello</th>
        <th>Frase</th>
        <th>Traduzioni</th>
      </tr>
    </thead>
    <tbody>
      {% for f in frasi %}
        <tr>
          <td class="text-nowrap">{{ f.direzione.descrizione }}</td>
          <td class="text-nowrap">{{ f.livello.descrizione }}</td>
          <td>
            <div class="fw-semibold">{{ f.espressione.testo }}</div>
            {% if f.espressione.info %}
              <div class="text-muted small">{{ f.espressione.info }}</div>
            {% endif %}
          </td>
          <td>
            {% set traduzioni = f.traduzioni ?? [] %}
            {% if traduzioni|length == 0 %}
              <span class="text-muted">-</span>
            {% else %}
              <div class="d-grid gap-1">
                {% for t in traduzioni %}
                  <div>{{ t.espressione.testo }}</div>
                {% endfor %}
              </div>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4">
            <div class="alert alert-warning mb-0">
              Nessuna frase trovata per questo contesto.
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
