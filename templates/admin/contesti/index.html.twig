{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
  <div>
    <h1 class="h3 mb-1">{{ title }}</h1>
    <p class="text-muted mb-0">Lista completa dei contesti.</p>
  </div>
  <a class="btn btn-outline-secondary" href="{{ path('app_admin_home') }}"><- Admin</a>
</div>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Contesto</th>
        <th class="text-end">Azioni</th>
      </tr>
    </thead>
    <tbody>
      {% for c in contesti %}
        <tr>
          <td>{{ c.descrizione }}</td>
          <td class="text-end">
            <a class="btn btn-sm btn-outline-primary" href="{{ path('app_admin_contesti_mostra', {id: c.id}) }}">Vedi</a>
            <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_admin_contesti_modifica', {id: c.id}) }}">Modifica</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="2">
            <div class="alert alert-warning mb-0">
              Nessun contesto trovato.
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
