<!doctype html>
<html lang="it">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{{ title ?? 'English Phrases' }}{% endblock %}</title>

    {# Bootstrap 5 (CDN) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="{{ asset('assets/favicon.svg') }}">

    {% block stylesheets %}
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700&display=swap');

    :root {
        --ep-bg: #f6f4ef;
        --ep-surface: #ffffff;
        --ep-ink: #111827;
        --ep-muted: #4b5563;
        --ep-border: #e6e1d9;
        --ep-shadow: 0 10px 30px rgba(12, 20, 33, 0.08);
        --ep-radius: 16px;
    }

    body {
        font-family: 'Sora', sans-serif;
        background: var(--ep-bg);
        color: var(--ep-ink);
    }

    .navbar {
        box-shadow: 0 6px 16px rgba(12, 20, 33, 0.12);
    }

    .card,
    .table,
    .alert,
    .form-control,
    .form-select {
        border-radius: var(--ep-radius);
        border-color: var(--ep-border);
    }

    .card {
        box-shadow: var(--ep-shadow);
    }

    .btn {
        border-radius: 12px;
        font-weight: 600;
    }

    .btn-primary {
        background: #111827;
        border-color: #111827;
    }

    .btn-primary:hover {
        background: #0b1220;
        border-color: #0b1220;
    }

    .btn-outline-secondary {
        border-color: #cbd5e1;
        color: #1f2937;
    }

    .btn-outline-secondary:hover {
        background: #f3f4f6;
        border-color: #cbd5e1;
        color: #111827;
    }

    .btn-success {
        background: #1f2937;
        border-color: #1f2937;
        color: #ffffff;
    }

    .btn-success:hover {
        background: #111827;
        border-color: #111827;
        color: #ffffff;
    }

    .badge {
        background: #e5e7eb !important;
        color: #111827 !important;
        border: 1px solid #d1d5db;
        font-weight: 600;
        letter-spacing: 0.02em;
    }

    .badge.text-bg-primary,
    .badge.text-bg-success,
    .badge.text-bg-secondary,
    .badge.text-bg-warning,
    .badge.text-bg-info,
    .badge.text-bg-danger {
        background: #e5e7eb !important;
        color: #111827 !important;
        border: 1px solid #d1d5db;
    }

    .form-control,
    .form-select {
        padding: 10px 12px;
    }

    .table {
        background: var(--ep-surface);
    }

    .table thead th {
        color: #6b7280;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        font-size: 0.75rem;
        border-bottom: 1px solid var(--ep-border);
    }

    .table tbody tr {
        border-color: var(--ep-border);
    }

    .icon {
        width: 1em;
        height: 1em;
        margin-right: 0.45rem;
        vertical-align: -0.125em;
    }

    .icon-stroke {
        fill: none;
        stroke: currentColor;
        stroke-width: 2;
        stroke-linecap: round;
        stroke-linejoin: round;
    }
    </style>
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand fw-semibold d-inline-flex align-items-center gap-2" href="{{ path('app_home') }}">
            <img src="{{ asset('assets/logo.svg') }}" alt="" width="28" height="28" class="d-inline-block align-text-top">
            English Phrases
        </a>
        <div class="d-flex">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Logout</a>
            {% endif %}
        </div>
    </div>
</nav>

<main class="container py-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>
