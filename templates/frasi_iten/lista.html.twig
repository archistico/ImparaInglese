{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">{{ title }}</h1>
        <p class="text-muted mb-0">Tutte le frasi Italiano -> Inglese con contesto, livello e traduzioni.</p>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="{{ path('app_frasi_iten') }}"><- Contesti</a>
        <a class="btn btn-outline-secondary" href="{{ path('app_home') }}"><- Home</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Contesto</th>
                <th>Livello</th>
                <th>Frase italiana</th>
                <th>Traduzioni</th>
            </tr>
        </thead>
        <tbody>
            {% for f in frasi %}
                <tr>
                    <td class="text-nowrap">{{ f.contesto.descrizione }}</td>
                    <td class="text-nowrap">{{ f.livello.descrizione }}</td>
                    <td>
                        <div>{{ f.espressione.testo }}</div>
                        {% if f.espressione.info %}
                            <div class="text-muted small">{{ f.espressione.info }}</div>
                        {% endif %}
                    </td>
                    <td>
                        {% set traduzioni = f.traduzioni ?? [] %}
                        {% if traduzioni|length == 0 %}
                            <span class="text-muted">-</span>
                        {% else %}
                            <div class="d-flex flex-wrap gap-2">
                                {% for t in traduzioni %}
                                    <span class="">{{ t.espressione.testo }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">
                        <div class="alert alert-warning mb-0">
                            Nessuna frase trovata per la direzione Italiano -> Inglese.
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
