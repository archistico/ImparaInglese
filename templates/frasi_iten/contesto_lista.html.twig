{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">{{ title }}</h1>
        <p class="text-muted mb-0">Contesto: {{ contesto.descrizione }}</p>
    </div>
    <a class="btn btn-outline-secondary" href="{{ path('app_frasi_iten') }}"><- Contesti</a>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Livello</th>
                <th>Frase</th>
                <th>Traduzioni</th>
            </tr>
        </thead>
        <tbody>
            {% for f in frasi %}
                <tr>
                    <td class="text-nowrap">{{ f.livello.descrizione }}</td>
                    <td>
                        <div class="fw-semibold">{{ f.espressione.testo }}</div>
                        {% if f.espressione.info %}
                            <div class="text-muted small">{{ f.espressione.info }}</div>
                        {% endif %}
                    </td>
                    <td>
                        {% set traduzioni = f.traduzioni ?? [] %}
                        {% if traduzioni|length == 0 %}
                            <span class="text-muted">-</span>
                        {% else %}
                            <div class="d-grid gap-1">
                                {% for t in traduzioni %}
                                    <div>{{ t.espressione.testo }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        <div class="alert alert-warning mb-0">
                            Nessuna frase trovata per questo contesto.
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
