{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="mb-3">
    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-outline-secondary" href="{{ path('app_frasi_iten') }}">
            <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                <line class="icon-stroke" x1="19" y1="12" x2="5" y2="12"></line>
                <polyline class="icon-stroke" points="12 19 5 12 12 5"></polyline>
            </svg>
        </a>
        <div>
            <div class="text-muted small">Contesto</div>
            <h1 class="h4 mb-0">{{ frase.contesto.descrizione }}</h1>
        </div>
    </div>

    <div class="d-flex align-items-center gap-2 mt-2 flex-nowrap">
        {% if prevId %}
            <a class="btn btn-primary" href="{{ path('app_frasi_iten_mostra', {id: prevId}) }}">
                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                    <line class="icon-stroke" x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline class="icon-stroke" points="12 19 5 12 12 5"></polyline>
                </svg>
                Precedente
            </a>
        {% else %}
            <button class="btn btn-primary" type="button" disabled>
                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                    <line class="icon-stroke" x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline class="icon-stroke" points="12 19 5 12 12 5"></polyline>
                </svg>
                Precedente
            </button>
        {% endif %}

        {% if nextId %}
            <a class="btn btn-primary" href="{{ path('app_frasi_iten_mostra', {id: nextId}) }}">
                Successiva
                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true" style="margin-right:0;margin-left:0.45rem;">
                    <line class="icon-stroke" x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline class="icon-stroke" points="12 5 19 12 12 19"></polyline>
                </svg>
            </a>
        {% else %}
            <button class="btn btn-primary" type="button" disabled>
                Successiva
                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true" style="margin-right:0;margin-left:0.45rem;">
                    <line class="icon-stroke" x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline class="icon-stroke" points="12 5 19 12 12 19"></polyline>
                </svg>
            </button>
        {% endif %}
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <div class="text-muted small mb-1">Traduci questa frase</div>
        <div class="fs-3 fw-semibold mb-2">{{ frase.espressione.testo }}</div>

        {% if frase.espressione.info %}
            <div class="alert info-box mb-3">
                <div class="fw-semibold mb-1">
                    <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                        <circle class="icon-stroke" cx="12" cy="12" r="9"></circle>
                        <line class="icon-stroke" x1="12" y1="10" x2="12" y2="16"></line>
                        <line class="icon-stroke" x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    Info
                </div>
                <div>{{ frase.espressione.info }}</div>
            </div>
        {% endif %}

        <details class="mt-3 reveal-details">
            <summary class="btn btn-lg w-100 reveal-btn">
                <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                    <path class="icon-stroke" d="M2 12s4-6 10-6 10 6 10 6-4 6-10 6-10-6-10-6"></path>
                    <circle class="icon-stroke" cx="12" cy="12" r="3"></circle>
                </svg>
                MOSTRA
            </summary>

            <div class="mt-3 reveal-content">
                <div class="text-muted small mb-2">Traduzione/i corretta/e</div>

                {% set traduzioni = frase.traduzioni ?? [] %}
                {% if traduzioni|length == 0 %}
                    <div class="alert alert-warning mb-0">
                        Nessuna traduzione trovata per questa frase.
                    </div>
                {% else %}
                    <div class="list-group">
                        {% for t in traduzioni %}
                            <div class="list-group-item">
                                <div class="fw-semibold fs-5">{{ t.espressione.testo }}</div>
                                {% if t.espressione.info %}
                                    <div class="text-muted small mt-1">{{ t.espressione.info }}</div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </details>
    </div>
</div>

<style>
/* rende il summary "come bottone" senza la freccetta brutta */
details > summary {
    list-style: none;
}
details > summary::-webkit-details-marker {
    display: none;
}

.info-box {
    background: #f9fafb;
    border: 1px solid var(--ep-border);
    color: var(--ep-ink);
}

.reveal-btn {
    background: #111827;
    border: 1px solid #111827;
    color: #ffffff;
    transition: transform 0.08s ease, box-shadow 0.15s ease, background 0.15s ease, border-color 0.15s ease;
}
.reveal-btn:hover,
.reveal-btn:focus {
    background: #0b1220;
    border-color: #0b1220;
    color: #ffffff;
}
.reveal-btn:active {
    transform: scale(0.98);
    background: #0b1220;
    border-color: #0b1220;
    color: #ffffff;
}
.reveal-btn:focus-visible {
    box-shadow: 0 0 0 0.2rem rgba(17, 24, 39, 0.35);
}

.reveal-content {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: max-height 0.2s ease, opacity 0.2s ease;
}
.reveal-details[open] .reveal-content {
    max-height: 1200px;
    opacity: 1;
    transition-delay: 0.08s;
}
</style>
{% endblock %}
