{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">
            <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                <line class="icon-stroke" x1="8" y1="6" x2="21" y2="6"></line>
                <line class="icon-stroke" x1="8" y1="12" x2="21" y2="12"></line>
                <line class="icon-stroke" x1="8" y1="18" x2="21" y2="18"></line>
                <circle class="icon-stroke" cx="4" cy="6" r="1"></circle>
                <circle class="icon-stroke" cx="4" cy="12" r="1"></circle>
                <circle class="icon-stroke" cx="4" cy="18" r="1"></circle>
            </svg>
            {{ title }}
        </h1>
        <p class="text-muted mb-0">Scegli un contesto e inizia a tradurre.</p>
    </div>

    <a class="btn btn-outline-secondary" href="{{ path('app_home') }}">
        <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
            <line class="icon-stroke" x1="19" y1="12" x2="5" y2="12"></line>
            <polyline class="icon-stroke" points="12 19 5 12 12 5"></polyline>
        </svg>
        Home
    </a>
</div>

<div class="row g-3">
    {% for r in rows %}
        {% set c = r.contesto %}
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-start justify-content-between gap-2">
                        <h2 class="h5 mb-0">{{ c.descrizione }}</h2>
                        <a class="badge text-bg-primary text-decoration-none" href="{{ path('app_frasi_enit_contesto_lista', { contestoId: c.id }) }}">{{ r.frasiCount }}</a>
                    </div>

                    <a class="btn btn-primary mt-3"
                        href="{{ path('app_frasi_enit_inizia', { contestoId: c.id }) }}">
                        <svg class="icon" viewBox="0 0 24 24" aria-hidden="true">
                            <polygon class="icon-stroke" points="6 4 20 12 6 20 6 4"></polygon>
                        </svg>
                        Inizia
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-warning">
                Nessun contesto trovato (verifica fixtures e direzione "Inglese -> Italiano").
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
