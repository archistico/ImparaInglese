{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <div class="text-muted small">Contesto</div>
        <h1 class="h4 mb-0">{{ frase.contesto.descrizione }}</h1>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="{{ path('app_frasi_enit') }}"><- Contesti</a>

        {% if prevId %}
            <a class="btn btn-outline-primary" href="{{ path('app_frasi_enit_mostra', {id: prevId}) }}"><- Precedente</a>
        {% else %}
            <button class="btn btn-outline-primary" type="button" disabled><- Precedente</button>
        {% endif %}

        {% if nextId %}
            <a class="btn btn-outline-primary" href="{{ path('app_frasi_enit_mostra', {id: nextId}) }}">Successiva -></a>
        {% else %}
            <button class="btn btn-outline-primary" type="button" disabled>Successiva -></button>
        {% endif %}
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <div class="text-muted small mb-1">Traduci questa frase</div>
        <div class="fs-3 fw-semibold mb-2">{{ frase.espressione.testo }}</div>

        {% if frase.espressione.info %}
            <div class="alert alert-info mb-3">
                <div class="fw-semibold mb-1">Info</div>
                <div>{{ frase.espressione.info }}</div>
            </div>
        {% endif %}

        <details class="mt-3">
            <summary class="btn btn-lg btn-success w-100">
                MOSTRA
            </summary>

            <div class="mt-3">
                <div class="text-muted small mb-2">Traduzione/i corretta/e</div>

                {% set traduzioni = frase.traduzioni ?? [] %}
                {% if traduzioni|length == 0 %}
                    <div class="alert alert-warning mb-0">
                        Nessuna traduzione trovata per questa frase.
                    </div>
                {% else %}
                    <div class="list-group">
                        {% for t in traduzioni %}
                            <div class="list-group-item">
                                <div class="fw-semibold fs-5">{{ t.espressione.testo }}</div>
                                {% if t.espressione.info %}
                                    <div class="text-muted small mt-1">{{ t.espressione.info }}</div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </details>
    </div>
</div>

<style>
details > summary {
    list-style: none;
}
details > summary::-webkit-details-marker {
    display: none;
}
</style>
{% endblock %}
